<section class='max-w-3xl mx-auto'>
  {{#each posts as |post|}}
    <article class='bg-gray-800 p-4 rounded-lg shadow-md mb-4'>
      <h2 class='text-2xl font-semibold mb-2'>
        <a
          href='/post/{{post.id}}'
          class='text-blue-400 hover:underline'
        >{{post.title}}</a>
      </h2>
      <p class='text-gray-400'>{{post.body}}</p>
    </article>
  {{/each}}

  <div class="pagination flex items-center justify-center mt-4">
    {{#each pageNumbers}}
      <a href="?page={{this}}" class="pagination-link{{#if (isCurrentPage this)}} active{{/if}} px-3 py-2 rounded-md text-gray-600 hover:bg-gray-200">{{this}}</a>
    {{/each}}
  </div>
</section>

<script src='/scripts/main.js'></script>