<div class="flex flex-col min-h-screen">
  <div class="flex flex-col items-center flex-1">
    <section class="max-w-3xl mx-auto">
      {{#each posts as |post|}}
      <article class="bg-gray-300 dark:bg-gray-800 p-4 rounded-lg shadow-md mb-4">
        <h2 class="text-2xl font-semibold mb-2">
          <a href="/post/{{post.id}}" class="text-indigo-500 hover:text-indigo-600 dark:text-blue-500 dark:hover:text-blue-300">
            {{post.title}}
          </a>
        </h2>
        <p class="text-gray-900 dark:text-gray-200">{{post.body}}</p>
        <p class="text-gray-600 dark:text-gray-400 flex justify-between">
          <span>{{post.user.name}}</span>
          <span>{{formatDate post.createdAt}}</span>
        </p>
      </article>
      {{/each}}
    </section>
 
    <div class="pagination flex justify-center md:p-4 md:fixed md:bottom-0 md:w-full relative mt-2">
      {{#each pageNumbers}}
      <a href="?page={{this.pageNumber}}"
        class="pagination-link px-3 py-2 mx-1 rounded-md text-gray-900 dark:text-gray-200 {{#if (isEqual this.pageNumber this.currentPage)}}bg-indigo-500 dark:bg-blue-500 text-white{{else}}hover:bg-gray-400 dark:hover:bg-gray-800{{/if}}">
        {{this.pageNumber}}
      </a>
      {{/each}}
    </div>
  </div>
</div>

<script src="/scripts/main.js"></script>