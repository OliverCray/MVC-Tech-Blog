<form
  class='max-w-md mx-auto p-6 bg-gray-300 dark:bg-gray-800 rounded shadow-md signup-form'
>
  <h2 class='text-2xl font-semibold mb-4'>Sign Up</h2>
  <div class='mb-4'>
    <label
      for='username-signup'
      class='block text-sm font-medium'
    >Username</label>
    <input
      type='text'
      placeholder='Create a username'
      required='required'
      id='username-signup'
      name='username-signup'
      class='w-full px-4 py-2 rounded bg-gray-400 dark:bg-gray-700 text-gray-900 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 shadow-sm'
    />
  </div>
  <div class='mb-4'>
    <label
      for='password-signup'
      class='block text-sm font-medium'
    >Password</label>
    <input
      type='password'
      placeholder='Create a password'
      required='required'
      id='password-signup'
      name='password-signup'
      class='w-full px-4 py-2 rounded bg-gray-400 dark:bg-gray-700 text-gray-900 dark:text-gray-200 placeholder-gray-500 dark:placeholder-gray-400 shadow-sm'
    />
  </div>
  <button
    type='submit'
    class='bg-indigo-500 dark:bg-blue-500 hover:bg-indigo-600 dark:hover:bg-blue-600 focus:ring-indigo-400 dark:focus:ring-blue-400 text-gray-100 px-4 py-2 rounded focus:outline-none focus:ring-2'
  >
    Sign Up
  </button>
  <p class='mt-4 text-sm text-gray-700 dark:text-gray-300 text-center'>
    Already have an account?
    <a href='/login' class='text-indigo-500 dark:text-blue-500'>Log In</a>
  </p>
</form>

