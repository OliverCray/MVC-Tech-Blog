<html lang='en' class='dark'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/styles/main.css' />
    <title>Tech Blog</title>
  </head>

  <body class='bg-gray-100 text-gray-900 dark:bg-gray-900 dark:text-gray-200'>
    <div class='flex'>
      <!-- Left empty column -->
      <div class='w-0 md:w-1/4'></div>

      <!-- Middle column with the body content and dark mode button -->
      <div class='w-full md:w-1/2 p-4 relative'>
        <section
          class='container mx-auto flex flex-col  items-center justify-between mb-4'
        >
          <header
            class='text-center md:text-left md:flex-1 text-5xl font-bold flex items-center justify-center p-2'
          >
            <a
              href='/'
              class='text-indigo-500 hover:text-indigo-600 dark:text-blue-500 dark:hover:text-blue-300'
            >Tech Blog</a>
          </header>
          <nav class='flex justify-center container mx-auto p-2 md:p-2 text-xl'>
            <ul class='flex space-x-4'>
              <li><a
                  href='/'
                  class='text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300'
                >Home</a></li>
              {{#if logged_in}}
                <li><a
                    href='/dashboard'
                    class='text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300'
                  >Dashboard</a></li>
                <li><a
                    href='/logout'
                    class='text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300'
                    id='logout-button'
                  >Logout</a></li>
              {{else}}
                <li><a
                    href='/login'
                    class='text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300'
                  >Login</a></li>
                <li><a
                    href='/signup'
                    class='text-gray-500 hover:text-gray-900 dark:text-gray-500 dark:hover:text-gray-300'
                  >Sign Up</a></li>
              {{/if}}
            </ul>
          </nav>
          <div class='absolute top-4 right-4 xl-custom:right-24'>
            {{> darkModeButton}}
          </div>
        </section>

        <!-- Body content here -->
        <main class='container mx-auto'>
          {{{body}}}
        </main>
      </div>

      <!-- Right empty column -->
      <div class='w-0 md:w-1/4'></div>
    </div>

    <script src='/scripts/toggleDarkMode.js'></script>
  </body>
</html>