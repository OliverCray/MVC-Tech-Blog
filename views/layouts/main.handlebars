<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link rel='stylesheet' href='/styles/main.css' />
    <title>Tech Blog</title>
  </head>
  <body class='bg-gray-900 text-gray-200'>
    <section
      class='container mx-auto flex flex-col md:flex-row p-4 md:p-8 items-center justify-between'
    >
      <header
        class='text-center md:text-left md:flex-1 text-4xl font-bold flex items-center justify-center'
      >
        <a href='/' class='text-blue-500 hover:text-blue-300'>Tech Blog</a>
      </header>
    </section>

    <nav class='flex justify-center container mx-auto p-4 md:p-8 text-xl'>
      <ul class='flex space-x-4'>
        <li><a href='/' class='text-gray-500 hover:text-gray-300'>Home</a></li>
        {{#if logged_in}}
          <li><a
              href='/dashboard'
              class='text-gray-500 hover:text-gray-300'
            >Dashboard</a></li>
          <li><a
              href='/logout'
              class='text-gray-500 hover:text-gray-300'
              id='logout-button'
            >Logout</a></li>
        {{else}}
          <li><a
              href='/login'
              class='text-gray-500 hover:text-gray-300'
            >Login</a></li>
          <li><a href='/signup' class='text-gray-500 hover:text-gray-300'>Sign
              Up</a></li>
        {{/if}}
      </ul>
    </nav>

    <main class='container mx-auto p-4 md:p-8'>
      {{{body}}}
    </main>

    <script src='/scripts/main.js'></script>
  </body>
</html>