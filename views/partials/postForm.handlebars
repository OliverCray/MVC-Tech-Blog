<form id='new-post-form' class='hidden'>
  <div class='mb-4'>
    <label for='post-title' class='block text-gray-300'>Title</label>
    <input
      type='text'
      id='post-title'
      class='w-full rounded-md p-2 bg-gray-800 text-white'
    />
  </div>
  <div class='mb-4'>
    <label for='post-body' class='block text-gray-300'>Body</label>
    <textarea
      id='post-body'
      class='w-full rounded-md p-2 bg-gray-800 text-white'
    ></textarea>
  </div>
  <button
    id='submit-post-button'
    class='bg-blue-500 text-white px-4 py-2 rounded-md shadow-md hover:bg-blue-600'
  >
    Create Post
  </button>
</form>