<form id='edit-{{context}}-form-{{id}}' hidden>
  <input type='hidden' name='id' value='{{id}}' />
  {{#if (isEqual context 'post')}}
    <input
      type='text'
      name='title'
      class='w-full px-4 py-2 rounded bg-gray-400 text-gray-700 dark:bg-gray-700 dark:text-gray-200 shadow-md mb-4'
      id='new-{{context}}-title-{{id}}'
      value='{{title}}'
    />
  {{/if}}
  <textarea
    name='body'
    class='w-full px-4 py-2 rounded bg-gray-400 text-gray-700 dark:bg-gray-700 dark:text-gray-200 shadow-md mb-4'
    rows='4'
    id='new-{{context}}-body-{{id}}'
  >{{body}}</textarea>
  <div class='button-container flex justify-between'>
    <button
      onclick='updateHandler({{id}}, "{{context}}", event)'
      class='bg-indigo-500 hover:bg-indigo-600 dark:bg-blue-500 dark:hover:bg-blue-600 focus:ring-indigo-400 dark:focus:ring-blue-400 text-gray-100 px-4 py-2 rounded shadow-md focus:outline-none focus:ring-2'
    >Update {{capitalise context}}</button>
    <button
      type='button'
      onclick='toggleEditing({{id}}, "{{context}}")'
      class='bg-gray-400 dark:bg-gray-700 text-gray-900 dark:text-gray-100 px-4 py-2 rounded shadow-md hover:bg-gray-500 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 ml-2'
    >Close</button>
  </div>
</form>